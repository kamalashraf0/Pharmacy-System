@model Drug

@{
    ViewBag.Title = "Add Drug";
}

<h2>@ViewBag.Title</h2>

@{
    Html.RenderPartial("_Disclaimer");
}

<div class="col-md-4">
    @await Component.InvokeAsync("GetDrugComponent")
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input  asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  asp-for="ImagePath"></label>
                <input asp-for="ImagePath" class="form-control" placeholder="Enter image URL" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>

                
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Add Drug" class="btn btn-primary" />
            </div>
        </form>
      
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
