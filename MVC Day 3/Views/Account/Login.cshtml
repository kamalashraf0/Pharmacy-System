@model LoginUserViewModel
@{
    ViewBag.Title = "Login";

    Layout = "_LoginLayout";
}
<br />
<div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-primary"> Back To Home</a>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center bg-primary text-white">
                    <h3>Sign In</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-outline mb-4">
                            <input asp-for="Name" id="username" class="form-control" required />
                            <label class="form-label" asp-for="Name">Username </label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>


                        <div class="form-outline mb-4">
                            <input asp-for="Password" id="password" type="password" class="form-control" required />
                            <label class="form-label" asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="row mb-4">
                            <div class="col d-flex justify-content-center">

                                <div class="form-check">
                                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="" />
                                    <label class="form-check-label" asp-for="RememberMe"> Remember me </label>
                                </div>
                            </div>

                            <div class="col text-end">
                                <!-- Simple link -->
                                <a href="#!">Forgot password?</a>
                            </div>
                        </div>

                        <!-- Submit button -->
                        <div class="d-flex justify-content-center mb-4">
                            <button type="submit" class="btn btn-primary btn-lg">Sign in</button>
                        </div>
                   

                        <!-- Register buttons -->
                        <div class="text-center">
                            <p>Not a member? <a asp-action="Register" asp-controller="Account">Register</a></p>
                            <p>or sign up with:</p>
                            <div class="d-flex justify-content-center mb-4">
                                <button type="button" class="btn btn-link mx-4">
                                    <i class="fab fa-facebook-f fa-2x"></i>
                                </button>
                                <button type="button" class="btn btn-link mx-1">
                                    <i class="fab fa-google fa-2x"></i>
                                </button>
                                <button type="button" class="btn btn-link mx-1">
                                    <i class="fab fa-twitter fa-2x"></i>
                                </button>
                                <button type="button" class="btn btn-link mx-1">
                                    <i class="fab fa-github fa-2x"></i>
                                </button>
                            </div>

                        </div>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
